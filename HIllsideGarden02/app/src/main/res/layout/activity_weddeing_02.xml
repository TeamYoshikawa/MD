<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="hillside.hillsidegarden02.Weddeing_Activity02">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_weddeing_02" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Weddeing_Activity02">



        <ImageView
            android:src="@drawable/wedding_sentence01"
            android:layout_width="600dp"
            android:layout_height="300dp"
            android:layout_x="110dp"
            android:layout_y="34dp"
            android:id="@+id/imageView38"
            android:layout_marginLeft="106dp"
            android:layout_marginStart="106dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView36"
            android:layout_toEndOf="@+id/imageView36" />

        <ImageView
            android:src="@drawable/wedding_image03"
            android:layout_width="326dp"
            android:layout_height="197dp"
            android:layout_x="-14dp"
            android:layout_y="162dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView37" />

        <ImageView
            android:src="@drawable/wedding_image04"
            android:layout_width="213dp"
            android:layout_height="148dp"
            android:layout_x="-22dp"
            android:layout_y="1dp"
            android:id="@+id/imageView36"
            android:layout_above="@+id/imageView37"
            android:layout_toLeftOf="@+id/imageView35"
            android:layout_toStartOf="@+id/imageView35" />

        <ImageView
            android:src="@drawable/wedding_image05"
            android:layout_width="145dp"
            android:layout_height="128dp"
            android:layout_x="155dp"
            android:layout_y="7dp"
            android:id="@+id/imageView35"
            android:layout_above="@+id/imageButton2"
            android:layout_alignRight="@+id/imageView37"
            android:layout_alignEnd="@+id/imageView37"
            android:layout_marginRight="27dp"
            android:layout_marginEnd="27dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/btn_top"
            android:background="@null"
            android:layout_x="500dp"
            android:layout_y="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:src="@drawable/btn_left"
            android:onClick="onClick"
            android:background="@null"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="0dp"
            android:layout_y="150dp"

            android:layout_alignTop="@+id/imageButton3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:id="@+id/imageButton3"
            android:src="@drawable/btn_right"
            android:onClick="onClick"
            android:background="@null"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="541dp"
            android:layout_y="150dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>