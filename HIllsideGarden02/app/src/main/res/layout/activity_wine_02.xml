<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="hillside.hillsidegarden02.Wine_Activity02">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_wine_02" />

    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Wine_Activity02">

        <ImageView
            android:src="@drawable/wine_sentence02"
            android:layout_width="461dp"
            android:layout_height="279dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="31dp"
            android:layout_x="-56dp"
            android:layout_y="51dp" />

        <ImageView
            android:src="@drawable/wine_image04"
            android:layout_width="221dp"
            android:layout_height="140dp"
            android:layout_x="326dp"
            android:layout_y="45dp" />


        <ImageView
            android:src="@drawable/wine_image05"
            android:layout_width="217dp"
            android:layout_height="137dp"
            android:layout_x="328dp"
            android:layout_y="203dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/btn_left"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_x="1dp"
            android:layout_y="158dp" />
        <ImageButton
            android:background="@null"
            android:id="@+id/imageButton2"
            android:src="@drawable/btn_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_x="501dp"
            android:layout_y="-2dp" />
        <ImageButton
            android:background="@null"
            android:id="@+id/imageButton3"
            android:src="@drawable/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_x="541dp"
            android:layout_y="156dp" />

    </AbsoluteLayout>


</android.support.design.widget.CoordinatorLayout>