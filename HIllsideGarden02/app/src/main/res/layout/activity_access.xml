            android:id="@+id/imageButton3"
            android:src="@drawable/btn_right"
            android:onClick="onClick"
            android:background="@null"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="541dp"
            android:layout_y="150dp"
            />
        <ImageButton
            android:id="@+id/imageButton4"
            android:src="@drawable/btn_gmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="340dp"
            android:layout_y="307dp"
            android:background="@null"
            />

        <ImageButton
            android:id="@+id/imageButton5"
            android:src="@drawable/btn_hp_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="459dp"
            android:layout_y="306dp"
            android:background="@null"
            />

    </AbsoluteLayout>


</android.support.design.widget.CoordinatorLayout>
